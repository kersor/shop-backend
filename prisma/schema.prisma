datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String     @default(uuid()) @id
  email String  @unique
  name  String?
  surname String?
  password String
  phone String?
}

model Category {
  id    String     @default(uuid()) @id
  name  String
  products Product[]
}

model Product {
  id    String     @default(uuid()) @id
  name String
  price String
  photo String

  category Category @relation(fields: [categoryId], references: [id])
  categoryId String
}