datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String     @default(uuid()) @id
  email String  @unique
  name  String?
  surname String?
  password String
  phone String?

  cart Cart?
}

model Category {
  id    String     @default(uuid()) @id
  name  String
  code  String
  products Product[]
}

model Product {
  id    String     @default(uuid()) @id
  name String
  price String
  photo String

  category Category @relation(fields: [categoryId], references: [id])
  categoryId String

  carts CartProduct[]
}

model Cart {
  id       String       @default(uuid()) @id
  userId   String       @unique
  user     User         @relation(fields: [userId], references: [id])

  products CartProduct[]
}

model CartProduct {
  cartId String
  productId String
  count Int

  cart Cart @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@id([cartId, productId])
}